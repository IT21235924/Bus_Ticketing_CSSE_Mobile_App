<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateoffersActivity"
    android:background="@drawable/create_offers">


    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="280dp"
        android:layout_height="54dp"

        android:background="@drawable/rounded_edittext_background"
        android:drawablePadding="10dp"
        android:foregroundTint="#AC3838"
        android:hint="Offer Name"
        android:padding="16dp"
        android:textColor="#605D5D"
        android:textColorHint="#605D5D"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <EditText
        android:id="@+id/sellername_edit_text"
        android:layout_width="280dp"
        android:layout_height="54dp"

        android:background="@drawable/rounded_edittext_background"
        android:drawablePadding="10dp"
        android:hint="Description"
        android:textColor="#605D5D"
        android:textColorHint="#605D5D"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <EditText
        android:id="@+id/category_edit_text"
        android:layout_width="280dp"
        android:layout_height="54dp"

        android:drawablePadding="10dp"
        android:hint="Category"
        android:textColorHint="#605D5D"
        android:textColor="#605D5D"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734"
        android:background="@drawable/rounded_edittext_background"/>

    <EditText
        android:id="@+id/description_edit_text"
        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_marginBottom="80dp"

        android:background="@drawable/rounded_edittext_background"
        android:drawablePadding="10dp"
        android:hint="Offer Duration"
        android:textColor="#605D5D"
        android:textColorHint="#605D5D"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.713" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="166dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/button_yellow"
        android:padding="16dp"
        android:text="Create"
        android:textColor="#000000"
        android:background="@drawable/rounded_edittext_background"
        app:cornerRadius="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868" />

